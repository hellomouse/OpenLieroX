<layout style="background-color: green;background-image: background.png;">
<style type="text/css">
.green  { color: green; }
label  { color: red; }
#blue { color: blue; }
#blue:hover  { color: #FFFF00; }
#blue:down  { color: #FF8800; }
marquee  { color: blue; }
marquee:hover { color: white; }
button  {
  background-gradient: #CCDDFF #AABBFF vertical;
border-size: 10px;
border-light: red;
border-dark: green;
border-style: outset;
border-radius-topleft: 5px;
}

button:down  {
  background-gradient: #AABBFF #CCDDFF00 vertical;

border-size: 10px;
border-color: green;
}

option { color: black; }
option:hover { background-color: navy; color: white; }

textbox { background-color: #F005;
color: navy;
}

textbox:hover, textbox:down  {
  background-color: rgba(110%, 256, 100%, 60%);
}

select  {
	list-background-color: transparent;
}

.normal  {
  list-background-color: white;
  border: 1px solid black;
}

item  {
  background-color: #0000BB;
}

item:hover  {
  background-color: #4444BB;
}

item:selected  {
  border: 1px solid white;
  background-color: blue;
}

item:selected-inactive  {
  background-color: black;
  border: solid grey;
}

checkbox  {
 color: white;
 border: 0px solid red;
 image: url("checkbox_new.png");
}
</style>
<label x="100" y="100" class="green" id="blue">An ordinary label</label>
<marquee x="200" y="200" width="40">Hello world!</marquee>
<img src="scrollbar.png" />
<img src="anim.png" animated="yes" x="0" y="300" period="0.1" opacity="80" />
<button glyph="glyph.png" x="0" y="250" width="200" height="200" autosize="false">This IS a button!</button>
<textbox x="500" y="395" width="100" caretcolor="black" />
<select x="500" y="300" width="100" style="background-color: white; color: black;">
<option style="background-color: #FF000083;">Red item</option>
<option style="background-color: green;">Green item</option>
<option style="background-color: blue;">Blue item</option>
<option style="background-color: black; color: white;">Black item</option>
<option style="background-color: white;">White item</option>
<option style="background-color: #FF8800;">Orange item</option>
<option>A normal item</option>
</select>

<!-- A classical, Windows-like combobox -->
<select x="500" y="320" width="100" class="normal">
<option>Normal item 1</option>
<option>Normal item 2</option>
<option>Normal item 3</option>
</select>

<!-- Listview -->
<list x="80" y="80" width="100" height="100" style="background-color: black">
<item style="color: white;">test</item>
<item style="color: white;">test 1</item>
<item style="color: white;">test 2</item>
<item style="color: white;">test 1</item>
<item style="color: white;">test 2</item>
<item style="color: white;">test 1</item>
<item style="color: white;">test 2</item>
<item style="color: white;">test 1</item>
<item style="color: white;">test 2</item>
</list>
<scrollbar height="150" x="450" width="150" y="0" color="blue" bgcolor="#00002280" dir="horizontal" max="100" highcolor="white" shadowcolor="#0000AA"  />

<checkbox checked="true" x="50" image="checkbox.png" />
<checkbox x="70" />
<checkbox x="90" checked="yes" />
<slider max="100" y="200" button="slider.png" />
</layout>